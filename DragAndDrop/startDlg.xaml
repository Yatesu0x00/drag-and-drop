<Window x:Class="DragAndDrop.startDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DragAndDrop"
        mc:Ignorable="d"
        Title="startDlg" Height="207" Width="341">
    <Grid>
        <TextBox x:Name="tbLeange" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="70" Margin="124,48,0,0" GotFocus="tbLeange_GotFocus"/>
        <Label Content="Seitenlänge" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,48,0,0"/>
        <Button x:Name="btnCancel" Content="Abbrechen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="124,90,0,0" Height="26" Click="btnCancel_Click"/>
        <Button x:Name="btnOk" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="72" Margin="30,90,0,0" Height="26" Click="btnOk_Click" IsDefault="true"/>

    </Grid>
</Window>
